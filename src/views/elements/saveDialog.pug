include ./argumentsFormWidget
include ./buttonIcon

mixin saveDialog(debate)
    dialog.save
        h2 #{__("saveAndShareExtended")}
        form(method="post" action="/save")
            // Janky AF
            div.hidden
                input(type="text" hidden value=debate.thesis name="thesis")
                +argumentsFormWidget(debate)

            label(for="password") #{__("setPassword")}
            input(type="text" name="password" placeholder=__("password"))
            p 
                i #{__("setPasswordHint")}

            br

            label(for="password") #{__("setExpiration")}
            input(type="date" name="expiry")
            p 
                i #{__("setExpirationHint1")} <br> #{__("setExpirationHint2")} 

            br
            
            center
                button #{__("saveAndShare")}
                    +fancyIcon("âž¦")
        a(onclick="showSaveModal(true)") #{__("close")}
